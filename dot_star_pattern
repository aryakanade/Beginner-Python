n = int(input("Enter the value of n: "))
x = n//2+1
for i in range(x):
    for j in range(1,x-i):
        print(".",end=" ")
    for j in range(1,2*i+2):
        print("*",end=" ")
    print()
for i in range(1,(n-x)+1):
    for j in range(i):
        print(".",end=" ")
    for j in range(1,n-(2*i)+1):
        print("*",end=" ")
    print()
