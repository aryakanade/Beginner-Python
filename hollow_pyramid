n = int(input("Enter the value of n: "))

for i in range(n):
    print("*",end=" ")
print()
for i in range(n//2):
    print("*",end=" ")
    for j in range(n//2,i,-1):   #The -1 step value means that the sequence decreases by 1 each time.
        print(" ",end=" ")
    print("*")
    
print("*",end=" ")
